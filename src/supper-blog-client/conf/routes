# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     	/posts/:id                com.minosiants.supperblog.controllers.Application.proxy(id)
GET     	/			              com.minosiants.supperblog.controllers.Application.index
GET     	/signup              com.minosiants.supperblog.controllers.Application.signUpView
GET     	/signin              com.minosiants.supperblog.controllers.Application.signInView



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
